{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2021",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "strictBindCallApply": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "paths": {
            "@ml/*": [
                "src/ml/*"
            ],
            "@image/*": [
                "src/image/*"
            ],
            "@validators/*": [
                "src/validators/*"
            ],
            "@database/*": [
                "src/database/*"
            ],
            "@common/*": [
                "src/common/*"
            ],
            "@api/*": [
                "src/api/*"
            ],
            "@diagnosis/*": [
                "src/diagnosis/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "test"
    ]
}